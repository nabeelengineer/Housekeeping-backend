{
  "info": {
    "name": "Housekeeping Backend API - Additions",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Endpoints added or behavior changed vs the existing collection. Uses {{baseUrl}} and {{token}}."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Departments (Public GET, plus update/delete)",
      "item": [
        {
          "name": "List Departments (Public)",
          "request": {"method": "GET", "url": {"raw": "{{baseUrl}}/api/departments", "host": ["{{baseUrl}}"], "path": ["api","departments"]}}
        },
        {
          "name": "Update Department (Admin)",
          "request": {"method": "PATCH", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}, {"key":"Content-Type","value":"application/json"}], "url": {"raw": "{{baseUrl}}/api/departments/D-OPS", "host": ["{{baseUrl}}"], "path": ["api","departments","D-OPS"]}, "body": {"mode":"raw","raw":"{\n  \"dept_name\": \"Ops & Support\"\n}"}}
        },
        {
          "name": "Delete Department (Admin)",
          "request": {"method": "DELETE", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": {"raw": "{{baseUrl}}/api/departments/D-OPS", "host": ["{{baseUrl}}"], "path": ["api","departments","D-OPS"]}}
        }
      ]
    },
    {
      "name": "Categories (update/delete)",
      "item": [
        {
          "name": "Update Category (Admin)",
          "request": {"method": "PATCH", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}, {"key":"Content-Type","value":"application/json"}], "url": {"raw": "{{baseUrl}}/api/categories/C-NET", "host": ["{{baseUrl}}"], "path": ["api","categories","C-NET"]}, "body": {"mode":"raw","raw":"{\n  \"category_name\": \"Network\"\n}"}}
        },
        {
          "name": "Delete Category (Admin)",
          "request": {"method": "DELETE", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": {"raw": "{{baseUrl}}/api/categories/C-NET", "host": ["{{baseUrl}}"], "path": ["api","categories","C-NET"]}}
        }
      ]
    },
    {
      "name": "Employees (update/delete)",
      "item": [
        {
          "name": "Update Employee (Admin)",
          "request": {"method": "PATCH", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}, {"key":"Content-Type","value":"application/json"}], "url": {"raw": "{{baseUrl}}/api/employees/ENE002", "host": ["{{baseUrl}}"], "path": ["api","employees","ENE002"]}, "body": {"mode":"raw","raw":"{\n  \"name\": \"Dex\"\n}"}}
        },
        {
          "name": "Delete Employee (Admin)",
          "request": {"method": "DELETE", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}], "url": {"raw": "{{baseUrl}}/api/employees/ENE002", "host": ["{{baseUrl}}"], "path": ["api","employees","ENE002"]}}
        }
      ]
    },
    {
      "name": "Requests (status accepts resolved/closed)",
      "item": [
        {
          "name": "Update Status",
          "request": {"method": "POST", "header": [{"key": "Authorization", "value": "Bearer {{token}}"}, {"key":"Content-Type","value":"application/json"}], "url": {"raw": "{{baseUrl}}/api/requests/REQ-EXAMPLE/status", "host": ["{{baseUrl}}"], "path": ["api","requests","REQ-EXAMPLE","status"]}, "body": {"mode":"raw","raw":"{\n  \"status\": \"resolved\"\n}"}, "description": "Backend sets closed_date when status is 'resolved' or 'closed'."}
        }
      ]
    },
    {
      "name": "Market (additional)",
      "item": [
        {"name":"Update Product","request":{"method":"PATCH","header":[{"key":"Authorization","value":"Bearer {{token}}"},{"key":"Content-Type","value":"application/json"}],"url":{"raw":"{{baseUrl}}/api/market/products/1","host":["{{baseUrl}}"],"path":["api","market","products","1"]},"body":{"mode":"raw","raw":"{\n  \"name\": \"Updated\",\n  \"price\": 500\n}"}}},
        {"name":"Mark Product Sold","request":{"method":"PATCH","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/market/products/1/mark-sold","host":["{{baseUrl}}"],"path":["api","market","products","1","mark-sold"]}}},
        {"name":"Delete Product (soft)","request":{"method":"DELETE","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/market/products/1","host":["{{baseUrl}}"],"path":["api","market","products","1"]}}},
        {"name":"Get My Interest","request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/market/products/1/interest/my","host":["{{baseUrl}}"],"path":["api","market","products","1","interest","my"]}}},
        {"name":"List Interests (Seller/Admin)","request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/market/products/1/interests","host":["{{baseUrl}}"],"path":["api","market","products","1","interests"]}}}
      ]
    },
    {
      "name": "Vehicles (additional)",
      "item": [
        {"name":"Admin Seed Defaults","request":{"method":"POST","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/vehicles/admin/seed-defaults","host":["{{baseUrl}}"],"path":["api","vehicles","admin","seed-defaults"]}}},
        {"name":"Admin Force Return","request":{"method":"POST","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/vehicles/admin/1/return","host":["{{baseUrl}}"],"path":["api","vehicles","admin","1","return"]}}},
        {"name":"List Vehicles (status/type)","request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/vehicles?status=all&type=","host":["{{baseUrl}}"],"path":["api","vehicles"],"query":[{"key":"status","value":"all"},{"key":"type","value":""}]}}}
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {"name":"List My Notifications","request":{"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/notifications","host":["{{baseUrl}}"],"path":["api","notifications"]}}},
        {"name":"Mark Notification Read","request":{"method":"PATCH","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{baseUrl}}/api/notifications/1/read","host":["{{baseUrl}}"],"path":["api","notifications","1","read"]}}}
      ]
    }
  ]
}
