{
  "info": {
    "name": "Housekeeping IT Admin Logs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "c3b6a2c0-7cde-4d2e-8b15-6e5c5e2c0001"
  },
  "item": [
    {
      "name": "Assets Summary (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/assets/admin/summary",
          "host": ["{{baseUrl}}"],
          "path": ["api", "assets", "admin", "summary"]
        }
      }
    },
    {
      "name": "Admin Audit Logs (paged)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/assignments/admin/logs?action=ASSIGN_ASSET&page=1&pageSize=20",
          "host": ["{{baseUrl}}"],
          "path": ["api", "assignments", "admin", "logs"],
          "query": [
            { "key": "action", "value": "ASSIGN_ASSET" },
            { "key": "page", "value": "1" },
            { "key": "pageSize", "value": "20" }
          ]
        }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "token", "value": "" }
  ]
}
