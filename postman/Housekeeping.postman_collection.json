  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw": "{{baseUrl}}/api/auth/signup", "host": ["{{baseUrl}}"], "path": ["api","auth","signup"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": \"E-1001\",\n  \"name\": \"John Doe\",\n  \"phone_no\": \"8888888888\",\n  \"email\": \"john@example.com\",\n  \"password\": \"pass1234\",\n  \"confirm_password\": \"pass1234\",\n  \"department_id\": \"D-HR\"\n}"
            },
            "description": "Registers a new employee. All fields required."
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employee_id\": \"E-1001\",\n  \"password\": \"pass1234\"\n}"
            },
            "description": "Returns JWT token and auto-saves it to the environment variable {{token}} via Tests script."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const res = pm.response.json();",
                  "  if (res && res.token) {",
                  "    pm.environment.set('token', res.token);",
                  "  } else {",
                  "    pm.environment.unset('token');",
                  "  }",
                  "  pm.test('Received JWT token', function () {",
                  "    pm.expect(res.token, 'token').to.be.a('string').and.to.have.length.greaterThan(0);",
                  "  });",
                  "} catch (e) {",
                  "  pm.environment.unset('token');",
                  "  pm.test('Response is JSON with token', function () {",
                  "    pm.expect.fail('Login response did not contain a JSON token');",
                  "  });",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
